{
	"name": "potunes-desktop-vue3-vite",
	"private": true,
	"version": "2.1.0",
	"scripts": {
		"dev": "vite",
		"build": "vite build && electron-builder --mac",
		"build:all": "vite build && electron-builder -mw",
		"build:win": "vite build && electron-builder --win",
		"preview": "vite preview"
	},
	"dependencies": {
		"@electron-toolkit/utils": "^3.0.0",
		"@headlessui/vue": "^1.7.16",
		"@radix-icons/vue": "^1.0.0",
		"@vueuse/core": "^12.4.0",
		"axios": "^1.5.0",
		"caniuse-lite": "^1.0.30001692",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"colorthief": "^2.6.0",
		"lucide-vue-next": "^0.469.0",
		"mitt": "^3.0.1",
		"pinia": "^2.1.6",
		"radix-vue": "^1.9.12",
		"tailwind-merge": "^2.6.0",
		"tailwindcss-animate": "^1.0.7",
		"vue": "^3.3.4",
		"vue-advanced-cropper": "^2.8.9",
		"vue-loading-overlay": "^6.0",
		"vue-router": "4",
		"vue-slider-component": "^4.1.0-beta.7",
		"vue-toast-notification": "^3",
		"vue3-lazyload": "^0.3.8"
	},
	"devDependencies": {
		"@vitejs/plugin-vue": "^4.3.4",
		"autoprefixer": "^10.4.15",
		"electron": "^26.2.0",
		"electron-builder": "^24.6.4",
		"postcss": "^8.4.29",
		"sass": "^1.66.1",
		"sass-loader": "^13.3.2",
		"terser": "^5.27.0",
		"tailwindcss": "^3.3.3",
		"typescript": "^5.2.2",
		"vite": "^4.4.9",
		"vite-plugin-electron": "^0.14.1",
		"vite-plugin-electron-renderer": "^0.14.5",
		"vue-tsc": "^1.8.10"
	},
	"main": "dist-electron/main.js",
	"packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
	"build": {
		"appId": "com.potunes.desktop",
		"productName": "破破",
		"asar": true,
		"files": [
			"dist/**/*",
			"dist-electron/**/*"
		],
		"extraResources": [
			{
				"from": "src/assets",
				"to": "dist/assets",
				"filter": [
					"**/*"
				]
			},
			{
				"from": "src/assets/images/menubar",
				"to": "dist/assets/menubar"
			}
		],
		"compression": "maximum",
		"directories": {
			"buildResources": "build/icons",
			"output": "release"
		},
		"mac": {
			"icon": "build/icons/icon.icns",
			"artifactName": "${productName}-${version}-${arch}.${ext}",
			"electronLanguages": [
				"zh_CN"
			],
			"target": [
				{
					"target": "dmg",
					"arch": [
						"arm64",
						"x64"
					]
				}
			]
		},
		"electronDownload": {
			"mirror": "https://npmmirror.com/mirrors/electron/"
		}
	}
}
